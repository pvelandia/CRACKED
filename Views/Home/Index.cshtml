@{
    ViewBag.Title = "Home Page";
}

<div class="image-container">
    <img src="~/Content/image/Sin título.png" class="full-width-image" />
    <div class="button-container">
        <button class="btn btn-primary">Ver Más</button>
    </div>
</div>

<!-- Agregar el siguiente CSS -->
<style>
    .full-width-image {
        width: auto; /* La imagen ocupará todo el ancho de la pantalla */
        height: auto; /* Mantiene la altura proporcional original */
        object-fit: contain; /* Asegura que la imagen no se deforme */
    }

    .image-container {
        position: relative; /* Necesario para posicionar el botón dentro de la imagen */
        width: 100%; /* El contenedor tiene el mismo ancho que la pantalla */
    }

    .button-container {
        position: absolute;
        bottom:10px; /* Coloca el botón 20px por encima de la parte inferior de la imagen */
        left: 50%; /* Centra el botón horizontalmente */
        transform: translateX(-50%); /* Asegura que el botón esté completamente centrado */
    }

    .btn-primary {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
