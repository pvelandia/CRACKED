@model CRACKED.Dtos.UserDto

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 style="color: saddlebrown; font-family: cursive; text-align: center;">Nuestros Cookiecakes</h1>
        <hr />

        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col">
                    <img src="~/Content/Imagen/image (6).png" width="380" height="360" />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Cookienute" class="btn btn-primary"  onclick="window.location='@Url.Action("Detalle_Cookiecakes", "User")'"/>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <img src="~/Content/Imagen/image (7).png" width="380" height="360" />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Kinder Cookie" class="btn btn-primary"  onclick="window.location='@Url.Action("Detalle_Cookiecakes", "User")'"/>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <img src="~/Content/Imagen/image (8).png" width="380" height="360" />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Rainbow" class="btn btn-primary"  onclick="window.location='@Url.Action("Detalle_Cookiecakes", "User")'"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>





}

<div>
    @Html.ActionLink("Volver a la lista", "Index", "Home")
</div>

<style>
    .btn-primary {
        padding: 10px 30px;
        font-size: 16px;
        background-color: saddlebrown;
        color: whitesmoke;
        border: none;
        border-radius: 5px;
        margin-top: 10px;
        cursor: pointer;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
