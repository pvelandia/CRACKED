@{ ViewData["Title"] = "Login"; }

<h2>Iniciar Sesión</h2>

<form>
    <div class="form-group">
        <label for="txtUsuario">Usuario</label>
        <input type="text" class="form-control" id="txtUsuario" placeholder="Nombre de usuario o correo electrónico">
    </div>

    <div class="form-group">
        <label for="txtContraseña">Contraseña</label>
        <div class="input-group">
            <input type="password" class="form-control" id="txtContraseña" placeholder="Contraseña">
            <span class="input-group-text" id="togglePassword" style="cursor: pointer;">
                <i class="bi bi-eye-slash-fill"></i>
            </span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Continuar</button>

    <div class="mt-3">
        <p class="fst-italic">¿Aún no eres cliente?</p>
        <button type="button" class="btn btn-secondary" onclick="window.location='@Url.Action("RegistroUsuarios", "User")'">¡Regístrate Ahora!</button>
    </div>
</form>

<script>
    // Script para toggle de visibilidad de contraseña
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('txtContraseña');

    togglePassword.addEventListener('click', function () {
        const type = passwordInput.type === 'password' ? 'text' : 'password';
        passwordInput.type = type;
        togglePassword.innerHTML = type === 'password' ? '<i class="bi bi-eye-slash-fill"></i>' : '<i class="bi bi-eye-fill"></i>';
    });
</script>
