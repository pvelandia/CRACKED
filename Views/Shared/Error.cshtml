<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Galletas y postres</title>

    <title>Ejemplo de Bootstrap</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        body {
            background-color: #f7ebdd;
            left: 20PX;
        }

        .nav-icon {
            font-size: 3rem; /* Icon size */
            color: saddlebrown; /* Icon color */
            display: flex; /* Flexbox for alignment */
            align-items: center; /* Center align items vertically */
            justify-content: center; /* Center align items horizontally */
        }

        .icon-footer {
            font-size: 1rem; /* Icon size */
            color: saddlebrown; /* Icon color */
        }

        .body-content {
            position: absolute;
            padding: 100px; /* Reduce el padding */
            min-height: 50vh;
        }

        .logo-left {
            position: absolute;
            top: 10px;
            left: 20px;
        }

        .nav-tabs {
            position: absolute;
            top: 10px;
            right: 20px;
            z-index: 1000;
        }

        .vertical-menu {
            display: flex;
            flex-direction: column;
            z-index: 1000;
        }

            .vertical-menu .nav-link {
                display: flex;
                align-items: center;
                padding: 10px;
                text-decoration: none; /* Para eliminar el subrayado de los enlaces */
                color: saddlebrown; /* Cambia el color del texto si es necesario */
            }

                .vertical-menu .nav-link img {
                    margin-right: 10px; /* Espacio entre la imagen y el texto */
                }

        .navbar-toggler {
            border: none;
            background-color: transparent;
            outline: none; /* Elimina el borde de enfoque */
            z-index: 1000;
        }

        .collapse {
            background-color: whitesmoke;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="logo-left">
            </div>
        <ul class=" nav nav-tabs">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Home")" class="nav-link">
                    <i class="bi bi-house-door-fill nav-icon"></i>
                </a>

            </li>
            <li class="nav-item">
                <a href="@Url.Action("Contact", "Home")" class="nav-link">
                    <i class="bi bi-cart-fill nav-icon"></i>
                </a>

            </li>
            <li class="nav-item">
                <a href="@Url.Action("inicioSesion", "User")" class="nav-link">
                    <i class="bi bi-person-fill nav-icon"> </i>
                </a>
            </li>
            <li class="nav-item">
                <button class="nav navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#barralateral" aria-controls="barralateral" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="bi bi-list nav-icon" style="font-size: 4rem; "> </span>
                </button>
                <div class="pos-f-t">
                    <div class="collapse" id="barralateral">
                        <div class="container-fluid">

                            <h5 class="text-black h6">NUESTROS PRODUCTOS</h5>
                            <div class="vertical-menu">
                                <a href="@Url.Action("Galletas", "User")" class="nav-link">
                                    <img src="data:image/png;base64," width="32" idth="300" height="32"> galletas
                                </a>
                                <a href="@Url.Action("Cookiecakes", "User")" class="nav-link">
                                    <img src="data:image/png;base64," width="32" idth="300" height="32"> Pasteles
                                </a>
                                <a href="@Url.Action("Contact", "Home")" class="nav-link">
                                    <img src="data:image/png;base64," width="32" idth="300" height="32"> Combos
                                </a>
                                <a href="@Url.Action("Contact", "Home")" class="nav-link">
                                    <img src="data:image/png;base64," width="32" idth="300" height="32"> Arma tu caja
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>


    <div class="container-fluid body-content">
        @RenderBody()
        <hr />

        <footer style="background-color: transparent; padding: 20px; text-align: left;">
            <p> <h5 style="color:saddlebrown">Contáctanos</h5>  </p>
            <i class="bi bi-telephone icon-footer"></i>
            310-808-74-06
            <p>
            <p>
                <i class="bi bi-instagram icon-footer"></i>
                CRACKEDCOOKIES_
            </p>
            <p>&copy; @DateTime.Now.Year - CRACKED</p>


        </footer>


    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundle/bootstrap")


</body>
</html>
